@import "../../styles/global/global.styl"

.languages-switch
  position: relative
  display: flex
  flex-direction: column
  justify-content: space-between
  align-items: center
  min-height: 31px
  size(24px, auto)
  z-index: 2

  &__list
    margin-bottom: 5px
    display: flex
    flex-direction: column
    size(24px, 21px)
    overflow-y: hidden
    transition: .3s
    flex-flow: wrap
    z-index: 2

    &--visible
      position: absolute
      top: 0
      left: 0
      height: auto
      @media(min-width: $extra-large)
        top: -15px

  &__btn
    width: 0
    height: 0
    border-style: solid
    border-width: 5px 5px 0 5px
    border-color: $ship-gray transparent transparent transparent
    cursor: pointer
    transition: .3s

    &--clicked
      display: none

  &__item
    display: block
    size(24px, 21px)
    cursor: pointer
    order: 2
    transition: .3s

    &--selected
      order: 0

    svg
      size(100%)