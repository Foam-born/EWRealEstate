@import "../../styles/global/global.styl"

.section-text
  min-height: 823px
  background-repeat: no-repeat
  background-size: cover
  background-position: bottom
  font-size: $px_16
  line-height: $px_24
  color: $ship-gray

  &__col
    @media(min-width: $large)
      max-width: 630px

  &__p-16
    margin-bottom: 40px
    font-size: $px_16

  &__p-15
    font-size: $px_15

  &__h2
    margin-bottom: 25px
    font-size: $px_28

  &__link
    display: inline-block
    position: relative
    margin-top: 10px
    margin-bottom: 40px
    color: $ship-gray
    font-size: 12px
    transition: .3s
    @media(min-width: $small)
      font-size: $px_15
    &::after
      position: absolute
      bottom: 0
      left: 0
      content: ''
      width: 100%
      height: 1px
      background-color: $ship-gray
      transition: .3s
    &:hover
      color: $tree-poppy
      text-decoration: none
      &::after
        background-color: $tree-poppy