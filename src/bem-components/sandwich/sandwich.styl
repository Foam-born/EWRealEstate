@import "../../styles/global/global.styl"

.sandwich
  display: flex
  flex-direction: column
  justify-content: space-between
  size(40px, 23px)
  cursor: pointer
  transform: translateY(-1px)
  transition: .3s
  @media(min-width: $extra-large)
    display: none
  &:hover
    .sandwich__item
      box-shadow: 0 2px 7px alpha($ship-gray, .1)

  &__item
    display: block
    width: 38px
    height: 5px
    background-color: $tree-poppy
    transition: .3s

  &--opened &__item:first-child
    display: none

  &--opened &__item:nth-child(2)
    transform: translateY(5px) rotate(45deg)

  &--opened &__item:last-child
    transform: translateY(-13px) rotate(-45deg)