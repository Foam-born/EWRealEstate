@import "../../styles/global/global.styl"

.first-screen
  size(100vw, 500px)
  background-size: cover
  @media(min-width: $small)
    size(100vw, 550px)

  &__content
    padding: 60px 15px

  &__link
    display: flex
    flex-direction: column

  &__links
    margin-top: 30px
    @media (min-width: $large)
      min-width: 900px

  &__link-tag
    display: inline-block
    margin-bottom: 30px

  &__header
    font-size: $px_28
    font-weight: 600
	@media(min-width: $small)
      font-size: $px_50