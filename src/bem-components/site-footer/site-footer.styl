@import "../../styles/global/global.styl"

.site-footer
  min-height: 922px
  padding: 150px 0 60px

  &__col
    display: flex
    flex-direction: column
    &:first-child
      text-align: center
      color: $pure-white
      @media(min-width: $medium)
        color: $ship-gray
      @media(min-width: $extra-large)
        text-align left

    &:not(:first-child)
      margin-bottom: 30px
      text-align: center
      @media(min-width: $medium)
        margin-bottom: 0
        text-align left

  &__logo
    margin: 30px auto 30px
    @media(min-width: $extra-large)
      margin: 0 0 30px

  &__title
    margin-bottom: 30px
    text-transform: uppercase
    font-size: $px_24
    line-height: $px_50

  &__contacts
    font-size: $px_16
    line-height: $px_26

  &__contacts-phones
    margin: 25px 0

  &__contacts-phone
    display: inline-block
    font-size: $px_24
    line-height: $px_30
    transition:.1s
    color: $pure-white
    @media(min-width: $medium)
      color: $ship-gray
    &:hover
      color: $tree-poppy
      text-decoration: none

  &__contacts-email
    position: relative
    transition:.1s
    color: $pure-white
    @media(min-width: $medium)
      color: $ship-gray
    &::after
      position: absolute
      left: 0
      bottom: 0
      content: ''
      width: 100%
      height: 1px
      background-color: $ship-gray
    &:hover
      color: $tree-poppy
      text-decoration: none
      &::after
        background-color: $tree-poppy

  &__contacts-item
    line-height: $px_30

  &__social-networks
    padding: 30px 15px
    display: flex
    justify-content: center
    @media(min-width: $medium)
      justify-content: flex-start
    svg
      size(100%)

  &__icon
    display: block
    &:hover
      text-decoration: none
      svg
        transition: .1s
        fill: $tree-poppy
    &:not(:last-child)
      margin-right: 35px

  &__fb
    size(16px, 28px)

  &__tw
    size(33px, 26px)

  &__menu
    display: block!important

  &__menu-list
    display: flex
    flex-direction: column

  &__menu-link
    text-transform: none
    font-size: $px_16
    line-height: $px_34
    color: $ship-gray
    font-weight: 500
    transition: .1s
    &:hover
      text-decoration: none
      color: $tree-poppy
    &::after
      display: none